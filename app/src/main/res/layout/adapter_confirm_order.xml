<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/recyclerview_margin"
        android:paddingLeft="@dimen/recyclerview_margin"
        android:paddingRight="@dimen/recyclerview_margin"
        android:paddingTop="@dimen/recyclerview_margin"
        android:weightSum="8">


        <TextView
            android:id="@+id/txtItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            style="@style/padding_order_textview"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtItemQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            style="@style/padding_order_textview"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            style="@style/padding_order_textview"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>